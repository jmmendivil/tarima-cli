#!/usr/bin/env node

var run = require('./'),
    path = require('path');

var pwd = process.cwd();

run({
  src: path.join(pwd, 'src'),
  dest: path.join(pwd, 'dest/build'),
  cache: path.join(pwd, 'dest/index.json'),
  watch: process.argv.indexOf('--watch') > -1,
  ignore: ['!**/_*', '!**/_*/**'],
  bundle: /index|main/,
  rename: {
    coffee: 'js',
    less: 'css',
    jade: 'html'
  }
}, function(err, result) {
  if (err) {
    console.log(err);
  }

  console.log('DONE', result.files);
});
