#!/usr/bin/env node

var run = require('./'),
    path = require('path');

var pwd = process.cwd();

run({
  src: path.join(pwd, 'src'),
  dest: path.join(pwd, 'dest/build'),
  cache: path.join(pwd, 'dest/index.json'),
  watch: process.argv.indexOf('--watch') > -1,
  bundle: /index\.(?:less|coffee)|(?:(\w+)\/\1\.(?!less))/,
  ignore: ['!**/_*', '!**/_*/**'],
  rename: {
    coffee: 'js',
    less: 'css',
    jade: 'html'
  }
}, function(err) {
  if (err) {
    console.log(err.stack || err);
  }

  console.log('DONE');
});
